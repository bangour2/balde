<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/db1_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".baldepdf">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <EditText
            android:id="@+id/system"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_marginTop="200dp"
            android:text="@string/entrez_le_system_ici"/>


        <CheckBox
            android:id="@+id/depannage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="310dp" />

        <CheckBox
            android:id="@+id/etalonnage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="310dp" />

        <CheckBox
            android:id="@+id/formation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="310dp" />

        <CheckBox
            android:id="@+id/installation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="310dp" />


        <bango_000.mypdf.CanvasView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/signature_canvas"
            android:layout_width="625dp"
            android:layout_height="100dp"
            android:layout_marginTop="545dp"
            android:visibility="visible"/>


        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="850dp"
            android:text="Enoyez" />


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="850dp"
            android:onClick="clearCanvas"
            android:text="Reprendre la signature" />

    </android.support.percent.PercentRelativeLayout>




</android.support.constraint.ConstraintLayout>
